  <form
    action="/users/<%= user._id %>/lails/<%= lail._id %>?_method=PUT"
    method="POST"
  >
  <label for="image">Image:</label>
  <input type="text" name="image" id="image" value = "<%= lail.image %>" />

  <label for="music">Edit Text:</label>
  <input type="text" name="addText" id="music" value = "<%= lail.addmusic %>"/>

  <button type="submit">Update Lail</button>
  </form>
    <!-- Ensure footer is included -->
    <%- include('../partials/_footer') %>
</body>
